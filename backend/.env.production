# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=CHANGE-THIS-TO-SECURE-RANDOM-STRING-MINIMUM-32-CHARACTERS
JWT_SECRET_KEY=CHANGE-THIS-TO-SECURE-JWT-SECRET-MINIMUM-32-CHARACTERS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE-THIS-SECURE-ADMIN-PASSWORD
ADMIN_EMAIL=admin@company.com

# Database Configuration
DATABASE_URL=postgresql://username:password@postgres:5432/chatbot_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=SECURE_REDIS_PASSWORD

# AI Provider Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY

# CORS Configuration
CORS_ORIGINS=https://chatbot.company.com,https://www.chatbot.company.com
ALLOWED_HOSTS=chatbot.company.com,www.chatbot.company.com,api.chatbot.company.com

# Rate Limiting & Security
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=30
MAX_REQUEST_SIZE=104857600
SECURITY_HEADERS_ENABLED=true

# Monitoring & Observability
ENABLE_TRACING=true
ENABLE_METRICS=true
ENABLE_CACHING=true
ENABLE_CIRCUIT_BREAKER=true

JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_HOST=jaeger
JAEGER_PORT=6831

# Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
REQUEST_TIMEOUT=30

# External Services
WEBHOOK_URL=https://webhooks.company.com/chatbot
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.company.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=noreply@company.com
EMAIL_PASSWORD=SECURE_EMAIL_PASSWORD

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
ALLOWED_FILE_TYPES=.pdf,.txt,.docx,.md

# AI Configuration
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=4000
TEMPERATURE=0.7

# RAG Configuration
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=8000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=chatbot-backups
BACKUP_S3_REGION=us-east-1

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/chatbot.crt
SSL_KEY_PATH=/etc/ssl/private/chatbot.key
SSL_ENABLED=true

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
