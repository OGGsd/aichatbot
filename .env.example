# Modern Chatbot System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CRITICAL SECURITY SETTINGS - CHANGE THESE IN PRODUCTION!
# =============================================================================

# Application Security
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-minimum-32-characters
ADMIN_PASSWORD=your-secure-admin-password-change-this

# Database Credentials
POSTGRES_PASSWORD=your-secure-database-password
REDIS_PASSWORD=your-secure-redis-password

# AI Service API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://chatbot_user:${POSTGRES_PASSWORD}@localhost:5432/chatbot
POSTGRES_DB=chatbot
POSTGRES_USER=chatbot_user

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
REDIS_DB=0

# CORS and Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=20

# File Upload
MAX_UPLOAD_SIZE=104857600
UPLOAD_PATH=./uploads

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONTEXT_LENGTH=4000
SIMILARITY_THRESHOLD=0.7

# Supabase (Vector Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus Metrics
PROMETHEUS_ENABLED=true
METRICS_PORT=8001

# Grafana
GRAFANA_PASSWORD=your-grafana-password

# =============================================================================
# PRODUCTION SETTINGS (for production deployment)
# =============================================================================

# SSL/TLS
SSL_REDIRECT=false
SSL_CERT_PATH=/etc/ssl/certs/chatbot.crt
SSL_KEY_PATH=/etc/ssl/private/chatbot.key

# Performance
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSRF_PROTECTION_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Frontend Development
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# Testing
TEST_DATABASE_URL=sqlite:///./test.db
SKIP_AUTH=false
MOCK_AI_RESPONSES=false